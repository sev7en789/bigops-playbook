[Service]
User=root
Group=root
ExecStart=/opt/exporter/node_exporter/node_exporter --web.listen-address=0.0.0.0:9100 --collector.textfile.directory=/opt/exporter/node_exporter/key/
ExecStop=/usr/bin/killall node_exporter

[Install]
WantedBy=multi-user.target

[Unit]
Description=node_exporter
After=network.target 
